{
    "trigger":{
	"registry": {
	    "change": "/{{.Domain}}/task/executor-trigger"
	}
    },

    "cmd": {
	"path" : "ls",
	"args" : [ "-al" ]
    },

    "runs": 5,

    "info": "/{{.Domain}}/task/executor-trigger/{{.Id}}",
    "status": "mqtt://iot.eclipse.org:1883/test.com/task/executor-trigger/{{.Id}}",

    "watch": [{
        "domain":"{{.Domain}}",
	"service":"test",
	"value_location":{
		"path":"/{{.Domain}}/test"
	},
	"reload":{
		"description" : "nginx",
        	"config_url": "file:///Users/david/go/src/github.com/infradash/dash/example/nginx.conf",
        	"config_destination":"/Users/david/go/src/github.com/infradash/dash/example/nginx.applied",
        	"cmd":["service", "nginx", "reload"]
    	}
    }],
    "tail": [
        {
            "path": "/Users/david/go/src/github.com/infradash/dash/example/test.log",
	    "stderr": true,
	    "topic": "mqtt://iot.eclipse.org:1883/{{.Domain}}/{{.Service}}/{{.Host}}/test.log"
        }
    ]
}
